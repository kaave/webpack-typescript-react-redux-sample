{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "dist",
    "typings/browser.d.ts",
    "typings/browser/**"
  ],
  "filesGlob": [
    "typings/main.d.ts",
    "app/scripts/**/*.ts",
    "app/scripts/**/*.tsx",
    "test/scripts/**/*.ts",
    "test/scripts/**/*.tsx"
  ],
  "files": [
    "typings/main.d.ts",
    "app/scripts/components/Hello.tsx",
    "app/scripts/entry_points/index.tsx",
    "test/scripts/components/Hello.spec.tsx"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
